<div data-role="page" class="ipadBdy">

<style type="text/css">
* {
  margin:0;
  padding:0;
 
}
.ipadBdy{
  background:transparent url(/public/images/bg.png) repeat 0 0;
  font-family:Arial, Helvetica, sans-serif;
  font-size:11px;
  color:#3d3e42;
}
  header,section,article,figure {
    display:block;
  }
  header {
    padding:26px 0 18px 0;
  }
  header figure {
    width:270px;
    margin:0 auto;
  }
  </style>


 <div class="pageTitle">
 <h1>Mode of Payment</h1>
 </div>

 <div class="toolbar">
   <div class="leftItem backButton">
     <a class="slide" href="<%= url_for :action => :back_Terms %>"style = "color:#FAFAD2"><font size="2" face="verdana" >Back</font></a>
   </div>
 </div>

<div class="content">
   <form method="POST" action="<%= url_for :action => :payment%>" >
   <table>
     
       <tr>
           <td width="40"><input type="radio" name="PaymentMode" id="Credit" value = "1"/></td>
           <td><label for="Credit">Credit Card</label></td>
       </tr>
       <tr>
           <td width="40"><input type="radio" name="PaymentMode" id="Debit" value = "2"/></td>
           <td><label for="Debit">Debit Card</label></td>
       </tr>
       <% if($mode == 2) %>
       <tr>
           <td width="40"><input type="radio" name="PaymentMode" id="Store" value = "3"/></td>
           <td><label for="Store">Pay at Store</label></td>
       </tr>
       <% end %>
   </table>
    <input type="submit" style="width:100%;height:100%" value="continue"/>
   </form>
</div>

</div>