<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @paymentmode.card %></h1>
    <a href="<%= url_for :action => :show, :id => @paymentmode.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @paymentmode.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @paymentmode.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="paymentmode[card]" class="fieldLabel">Card</label>
            <input type="text" id="paymentmode[card]" name="paymentmode[card]" value="<%= @paymentmode.card %>" <%= placeholder( "Card" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
