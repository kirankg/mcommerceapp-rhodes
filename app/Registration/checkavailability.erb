<div data-role="page">

<div class="pageTitle">
    <h1>New  Register</h1>
 </div>
<div class="toolbar">
     <div class="leftItem blueButton">
      <a class="slide" href="<%= url_for :controller => :Settings, :action => :login1 %>"style = "color:#FAFAD2"><font size="2" face="verdana" >cancel</font></a>
     </div>
 </div>

  <div class="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      
      <% if ($var1 == "" )%>
          <div data-role="fieldcontain">
            <label for="registration[firstname]" class="fieldLabel"><font size="2"><b>First Name</b></font><font size="2" color="red">*</font> </label>
            <input type="text" id="registration[firstname]" name="registration[firstname]" <%= placeholder("Firstname") %> />
          </div>
          <% else %>
              <div data-role="fieldcontain">
                <label for="registration[firstname]" class="fieldLabel"><font size="2"><b>First Name</b></font><font size="2" color="red">*</font> </label>
                <input type="text" value=<%=$var1%> id="registration[firstname]" name="registration[firstname]" <%= placeholder("Firstname") %> />
              </div>
              <% end %>
      
              
              <% if ($var2 == "" )%>
          <div data-role="fieldcontain">
            <label for="registration[lastname]" class="fieldLabel"><font size="2"><b>Last Name</b></font><font size="2" color="red">*</font> </label>
            <input type="text" id="registration[lastname]" name="registration[lastname]" <%= placeholder("Lastname") %> />
          </div>
              <% else %>
              <div data-role="fieldcontain">
                <label for="registration[lastname]" class="fieldLabel"><font size="2"><b>Last Name</b></font><font size="2" color="red">*</font> </label>
                <input type="text" value=<%=$var2%> id="registration[lastname]" name="registration[lastname]" <%= placeholder("Lastname") %> />
              </div>
                  <% end %>
        
                  
                  <% if ($emailid == "" || $availability != "true")%>
          <div data-role="fieldcontain">
            <label for="registration[emailid]" class="fieldLabel"><font size="2"><b>Email Id</b></font><font size="2" color="red">*</font> </label>
            <input type="text" id="registration[emailid]" name="registration[emailid]" <%= placeholder("Emailid") %> />
          </div>
              <% else %>
              <div data-role="fieldcontain">
                <label for="registration[emailid]" class="fieldLabel"><font size="2"><b>Email Id</b></font><font size="2" color="red">*</font> </label>
                <input type="text" value=<%=$emailid%> id="registration[emailid]" name="registration[emailid]" <%= placeholder("Emailid") %> />
              </div>
                  <% end %>
          
          
   <input type="submit" style="width:100%;height:100%" value="CheckAvailability"/>
 </form>
</div>
              
 </div>