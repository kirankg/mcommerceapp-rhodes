<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @products.productname %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @products.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Productname</div>
            <div class="itemValue"><%= @products.productname %></div>
          </li>
      
          <li>
            <div class="itemLabel">Productid</div>
            <div class="itemValue"><%= @products.productid %></div>
          </li>
      
          <li>
            <div class="itemLabel">Productprice</div>
            <div class="itemValue"><%= @products.productprice %></div>
          </li>
      
          <li>
            <div class="itemLabel">Categoryid</div>
            <div class="itemValue"><%= @products.categoryid %></div>
          </li>
      
    </ul>
  </div>

</div>
