<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @products.object %>
    <h1>Edit <%= @products.productname%></h1>
    <%= link_to "Delete", :action => :delete, :id => @products.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @products.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Productname: </td>
              <td class="itemValue"><input type="text" name="products[productname]" value="<%= @products.productname %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Productid: </td>
              <td class="itemValue"><input type="text" name="products[productid]" value="<%= @products.productid %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Productprice: </td>
              <td class="itemValue"><input type="text" name="products[productprice]" value="<%= @products.productprice %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Categoryid: </td>
              <td class="itemValue"><input type="text" name="products[categoryid]" value="<%= @products.categoryid %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
