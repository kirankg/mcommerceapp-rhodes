<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @products.productname %></h1>
    <a href="<%= url_for :action => :show, :id => @products.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @products.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @products.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="products[productname]" class="fieldLabel">Productname</label>
            <input type="text" id="products[productname]" name="products[productname]" value="<%= @products.productname %>" <%= placeholder( "Productname" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="products[productid]" class="fieldLabel">Productid</label>
            <input type="text" id="products[productid]" name="products[productid]" value="<%= @products.productid %>" <%= placeholder( "Productid" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="products[productprice]" class="fieldLabel">Productprice</label>
            <input type="text" id="products[productprice]" name="products[productprice]" value="<%= @products.productprice %>" <%= placeholder( "Productprice" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="products[categoryid]" class="fieldLabel">Categoryid</label>
            <input type="text" id="products[categoryid]" name="products[categoryid]" value="<%= @products.categoryid %>" <%= placeholder( "Categoryid" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
