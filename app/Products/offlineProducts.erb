<div data-role="page" class="ipadBdy">

<style type="text/css">
* {
  margin:0;
  padding:0;
 
}
.ipadBdy{
  background:transparent url(/public/images/bg.png) repeat 0 0;
  font-family:Arial, Helvetica, sans-serif;
  font-size:11px;
  color:#3d3e42;
}
</style>

<div class="pageTitle">
    <h1><font size="3">Products</font></h1>
</div>
  
<div class="toolbar">
         <div class="leftItem backButton">
            <a class="slide" href="<%= url_for :controller=>:Categories,:action =>:offline %>" style = "color:#FAFAD2"><font size="2" face="verdana" >Back</font></a>
         </div>
       
          <div class="rightItem blueButton" >
            <a class="slide" href="<%= url_for :controller=>:Products,:action =>:viewCart %>" style = "color:#FAFAD2"><font size="2" face="verdana" >View Cart</font></a>
          </div>
</div>

  <div class="content">
    <ul>
      <% @products.each do |payment| %>
        <% if($off_catg_id == payment.categoryid) %>
        
        <li>
                         
           <form method="POST" action="<%= url_for :action => :offline_add_to_cart,:id=> payment.object%>" >
   
                       <table>
                           <tr>
                             <td style="height:10px;width:100px">
                                 
                                 <font size="3"><span style="width:120px"><%= payment.productname %></span></font>
                                 
                             </td>
                           
                              <td>   
                             <td style="width:100px; height:5px;" >       
                                <font  size="1"> <input type="submit" style="width:100%;height:100%;background-color:#00008B" value="Add to Cart"/> </font>                       
                             </td>
                             
                             
                           </tr>
                           
                           <tr>
                             <td style="height:7px">
                                 
                                <font size="2"> <span><%= "Price:&nbsp;&nbsp;"+payment.productprice+".00" %></span></font>
                                
                             </td>
                             
                                
                             
                              <td style="height:7px;width:30px">
                               
                                 <font size="2"><label for="login" class="itemLabel" style="width:30px">Quantity:</label></font>
                              </td>
                             <td style="height:7px;width:30px">
                                <input type="text" style="height:20px;width:40px" size="4" maxlength="3" border="1" id="quantity" name="quantity" />
                             </td>
                                
                                 </tr>
                               
                           
                        </table>
                             
            </form>
          </li>
  

        <% end %>
      <% end %>

    </ul>
  </div>

             

</div>