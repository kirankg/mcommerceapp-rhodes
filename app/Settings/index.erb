             <div class="pageTitle">
               <h1><font size="3">Account Login<font size="3"></h1>
             </div>
             
            <div class="toolbar" data-icon="star">
            
              <div class="leftItem backButton" >
                 <a href="<%= url_for :controller => :Products, :action => :viewCart %>"style = "color:#FAFAD2"><font size="2" face="verdana">Cancel</font></a>
               </div> 
               
             </div>
             
             <div class="content">
             <form method="POST" action="<%= url_for :controller => :Settings, :action => :offline_login %>">
              
             
                  <div data-role="fieldcontain">
             <label for="login" class="itemLabel"><b>EmailID&nbsp;<font color="red">*</font></b></label>
                    <input type="text" id="login" name="login" class="itemValue" <%= placeholder("email id") %> />
                  </div>
                  <div data-role="fieldcontain">
                    <label for="password"><b>Password&nbsp;<font color="red">*</font></b></label>
                    <input type="password" id="password" name="password" class="itemValue" <%= placeholder("password") %> />
                  </div>
                  <table>
                  <tr>
                 
                  <td style="width:100%">
                  <input  type="submit" style="width:100%;height:100%" value="Login"/>
                  </td>
                 
                  </tr>
                  
                                       </table>
                </form>
                
                      
              </div>
             
             </div>
</div>