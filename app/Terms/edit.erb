<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @terms.terms %></h1>
    <a href="<%= url_for :action => :show, :id => @terms.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @terms.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @terms.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="terms[terms]" class="fieldLabel">Terms</label>
            <input type="text" id="terms[terms]" name="terms[terms]" value="<%= @terms.terms %>" <%= placeholder( "Terms" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
