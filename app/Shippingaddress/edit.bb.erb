<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @shippingaddress.object %>
    <h1>Edit <%= @shippingaddress.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @shippingaddress.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @shippingaddress.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[name]" value="<%= @shippingaddress.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Apartment: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[apartment]" value="<%= @shippingaddress.apartment %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Street: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[street]" value="<%= @shippingaddress.street %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">City: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[city]" value="<%= @shippingaddress.city %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Zipcode: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[zipcode]" value="<%= @shippingaddress.zipcode %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Phone: </td>
              <td class="itemValue"><input type="text" name="shippingaddress[phone]" value="<%= @shippingaddress.phone %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
