<div data-role="page" class="ipadBdy">

<style type="text/css">
* {
  margin:0;
  padding:0;
 
}
.ipadBdy{
  background:transparent url(/public/images/bg.png) repeat 0 0;
  font-family:Arial, Helvetica, sans-serif;
  font-size:11px;
  color:#3d3e42;
}
  header,section,article,figure {
    display:block;
  }
  header {
    padding:26px 0 18px 0;
  }
  header figure {
    width:270px;
    margin:0 auto;
  }
  </style>
  
  <div class="pageTitle">
  <h1><font size="2">Shipping Method</font></h1>
  </div>
  

  <div class="toolbar">
  <% if $cart.length > 0%>
    <div class="leftItem backButton">
      <a class="slide" href="<%= url_for :controller=>:Categories,:action => :viewCart %>" style = "color:#FAFAD2"><font size="2" face="verdana" >Back</font></a>
    </div>
    <% else %>
    <div class="leftItem backButton">
      <a class="slide" href="<%= url_for :controller=>:Products,:action => :viewCart %>" style = "color:#FAFAD2"><font size="2" face="verdana" >Back</font></a>
    </div>
    <% end %>
      
</div>

  <div class="content">
      <form method="POST" action="<%= url_for :action => :payment%>" >
      <table>
        
          <tr>
              <td width="40"><input type="radio" name="DeliveryMethod" id="HomeDelivery" value = "1"/></td>
              <td><label for="HomeDelivery">Home Delivery</label></td>
          </tr>
          <tr>
              <td width="40"><input type="radio" name="DeliveryMethod" id="Store" value = "2"/></td>
              <td><label for="Store">Store Pick-Up</label></td>
          </tr>
          
      </table>
       <input type="submit" style="width:100%;height:100%" value="continue"/>
      </form>
  </div>
  
 

</div>
