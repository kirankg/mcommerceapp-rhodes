<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Shippingaddress</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @shippingaddress.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Apartment: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[apartment]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Street: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[street]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">City: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[city]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Zipcode: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[zipcode]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Phone: </td>
                <td class="itemValue"><input type="text" name="shippingaddress[phone]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
