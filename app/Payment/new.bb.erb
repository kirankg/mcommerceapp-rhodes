<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Payment</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @payment.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Cardtype: </td>
                <td class="itemValue"><input type="text" name="payment[cardtype]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Cardnumber: </td>
                <td class="itemValue"><input type="text" name="payment[cardnumber]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Cardexpmonth: </td>
                <td class="itemValue"><input type="text" name="payment[cardexpmonth]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Cardexpyear: </td>
                <td class="itemValue"><input type="text" name="payment[cardexpyear]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Cardpin: </td>
                <td class="itemValue"><input type="text" name="payment[cardpin]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Cardname: </td>
                <td class="itemValue"><input type="text" name="payment[cardname]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
