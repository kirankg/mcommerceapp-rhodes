<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @payment.object %>
    <h1>Edit <%= @payment.cardtype%></h1>
    <%= link_to "Delete", :action => :delete, :id => @payment.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @payment.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Cardtype: </td>
              <td class="itemValue"><input type="text" name="payment[cardtype]" value="<%= @payment.cardtype %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cardnumber: </td>
              <td class="itemValue"><input type="text" name="payment[cardnumber]" value="<%= @payment.cardnumber %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cardexpmonth: </td>
              <td class="itemValue"><input type="text" name="payment[cardexpmonth]" value="<%= @payment.cardexpmonth %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cardexpyear: </td>
              <td class="itemValue"><input type="text" name="payment[cardexpyear]" value="<%= @payment.cardexpyear %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cardpin: </td>
              <td class="itemValue"><input type="text" name="payment[cardpin]" value="<%= @payment.cardpin %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Cardname: </td>
              <td class="itemValue"><input type="text" name="payment[cardname]" value="<%= @payment.cardname %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
